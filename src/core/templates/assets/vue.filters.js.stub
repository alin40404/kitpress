// 定义全局过滤器
Vue.filter('truncate', function (text, length = 50) {
    if (!text) return '';
    if (text.length <= length) return text;
    return text.substring(0, length) + '...';
});

// 可以继续添加其他全局过滤器
Vue.filter('datetime', function (value) {
    if (!value) return '';
    return moment(value).format('YYYY-MM-DD HH:mm:ss');
});